<div class="section">
  <div class="container">
    <div class="columns is-centered">

      <div class="column is-4">

      <h2 class="title is-2">Forgot your password?</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

              <div class="form-inputs">
                <div class="field">
                  <div calss="control">
                    <%= f.input :email, required: true, input_html: { class: "input" }, label_html: { class: "label" }, wrapper: false %>
                  </div>
                </div>
              </div>

        <div class="form-actions">
          <%= f.button :submit, "Send me reset password instructions", class: "button is-info is-medium user-btn" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>