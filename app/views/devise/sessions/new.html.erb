<div class="section">
  <div class="container">
    <div class="columns is-centered">

      <div class="column is-4">

      <h2 class="title is-2">Log In</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <div class="field">
            <div calss="control">
              <%= f.input :email, required: true, input_html: { class: "input" }, label_html: { class: "label" }, wrapper: false %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :remember_me, wrapper: false, as: :boolean if devise_mapping.rememberable? %>
            </div>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.button :submit, "Log in", class: "button is-info is-medium user-btn" %>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>

